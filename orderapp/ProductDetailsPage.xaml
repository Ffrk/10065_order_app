<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="orderapp.ProductDetailPage"
             Title="ProductDetailPage">
    <StackLayout Padding="20">
        <Label Text="{Binding Name}" FontSize="24"/>
        <Label Text="{Binding Description}" FontSize="18"/>
        <Picker Title="Select Option" ItemsSource="{Binding Options}"/>
        <Button Text="Add to Cart" Command="{Binding AddToCartCommand}"/>
    </StackLayout>
</ContentPage>
