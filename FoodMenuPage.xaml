<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="orderapp.FoodMenuPage"
             Title="FoodMenuPage">
    <VerticalStackLayout>
        <CollectionView x:Name="menuItemsCollectionView" ItemsSource="{Binding MenuItems}">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <VerticalStackLayout Padding="16">
                        <Image Source="{Binding ImageSource}" Aspect="AspectFill" HeightRequest="150" />
                        <Label Text="{Binding Name}" FontSize="Title" FontAttributes="Bold" Margin="0,10,0,0" />
                        <Label Text="{Binding Price, StringFormat='${0:F2}'}" FontSize="Body" FontAttributes="Bold" Margin="0,5,0,0" />
                        <Button Text="Add to Order" Clicked="OnAddToOrderButtonClicked" Margin="0,10,0,0" />
                    </VerticalStackLayout>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </VerticalStackLayout>
</ContentPage>